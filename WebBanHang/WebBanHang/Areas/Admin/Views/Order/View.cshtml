@model WebBanHang.Models.EF.Order

@{
    ViewBag.Title = "Order detail";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Order detail</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Order detail</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Order number</label>
                        <p class="form-control">@Model.Code</p>
                    </div>
                </div><div class="col-md-6">
                    <div class="form-group">
                        <label>Customer name</label>
                        <p class="form-control">@Model.CustomerName</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phone</label>
                        <p class="form-control">@Model.Phone</p>
                    </div>
                </div><div class="col-md-6">
                    <div class="form-group">
                        <label>Total</label>
                        <p class="form-control">$@Model.TotalAmount</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Status</label>
                        <p class="form-control">@(Model.TypeMethod==1?"Unpaid":"Paid")</p>
                    </div>
                </div><div class="col-md-6">
                    <div class="form-group">
                        <label>Create date</label>
                        <p class="form-control">@Model.CreatedDate</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h2>List of orders</h2>
                </div>
                <div class="col-12">
                    @Html.Action("Partial_Product", "Order", new { id = Model.Id })
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
