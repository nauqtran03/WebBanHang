@model WebBanHang.Models.EF.Product
@{
    ViewBag.Title = "Add product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/product" class="nav-link">Product</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/product/add" class="nav-link">Add new</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add new news</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/Product">Product</a></li>
                    <li class="breadcrumb-item active">Add new</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">New infomation added to product</h3>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Add", "Product", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">General product information</a></li>
                                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Images</a></li>
                                <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">SEO</a></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Product name</label>
                                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Enter product name" })
                                        @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Product code</label>
                                        @Html.TextBoxFor(x => x.ProductCode, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.ProductCode, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Product category</label>
                                        @Html.DropDownListFor(x => x.ProductCategoryId, ViewBag.ProductCategory as SelectList, "-Select product category-", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.ProductCategoryId, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Description</label>
                                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Product detail</label>
                                        @Html.TextAreaFor(x => x.Detail, new { @class = "form-control", @id = "txtDetail" })
                                        @Html.ValidationMessageFor(x => x.Detail, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-4">
                                            <label for="exampleInputEmail1">Quantity</label>
                                            @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control", @Value = "1" })
                                            @Html.ValidationMessageFor(x => x.Quantity, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="col-4">
                                            <label for="exampleInputEmail1">Price</label>
                                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @id = "Price", @Value = "0" })
                                            @Html.ValidationMessageFor(x => x.Price, null, new { @class = "text-dangeSr" })
                                        </div>
                                        <div class="col-4">
                                            <label for="exampleInputEmail1">Price sale</label>
                                            @Html.TextBoxFor(x => x.PriceSale, new { @class = "form-control", @id = "PriceSale", @Value = "0" })
                                            @Html.ValidationMessageFor(x => x.PriceSale, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-3">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    @Html.CheckBoxFor(x => x.IsActive, new { @class = "custom-control-input", @id = "IsActiveCheckbox", @checked = "checked" })
                                                    <label for="IsActiveCheckbox" class="custom-control-label">Status</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    @Html.CheckBoxFor(x => x.IsHome, new { @class = "custom-control-input", @id = "IsHomeCheckbox" })
                                                    <label for="IsHomeCheckbox" class="custom-control-label">Hot</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    @Html.CheckBoxFor(x => x.IsFeature, new { @class = "custom-control-input", @id = "IsFeatureCheckbox" })
                                                    <label for="IsFeatureCheckbox" class="custom-control-label">Featured</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    @Html.CheckBoxFor(x => x.IsSale, new { @class = "custom-control-input", @id = "IsSaleCheckbox" })
                                                    <label for="IsSaleCheckbox" class="custom-control-label">Promotion</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="timeline">
                                    <div class="row">
                                        <div class="col-md-12 text-right">
                                            <input type="button" class="btn btn-primary" id="iUpload" onclick="BrowseServer();" value="Upload" />
                                        </div>
                                        <div class="col-md-12">
                                            <table class="table table-hover" id="tbImageProduct">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center">#</th>
                                                        <th class="text-center">Image</th>
                                                        <th class="text-center">Thumbnail</th>
                                                        <th class="text-center">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="tbHtml">
                                                    @*<tr>
                                        <td class="text-center">1</td>
                                        <td class="text-center"><img src="" alt="Alternate Text" width="70"/></td>
                                        <td class="text-center"><input type="radio" name="rDefault" /></td>
                                        <td class="text-center"><a href="#" class="btn btn-sm btn-danger">Delete</a></td>
                                                 </tr>*@
                                                </tbody>
                                            </table>
                                            <input type="hidden" id="tCurrentId" value="0" />
                                        </div>
                                    </div>

                                </div>
                                <!-- /.tab-pane -->

                                <div class="tab-pane" id="settings">
                                    <form class="form-horizontal">
                                        <div class="form-group row">
                                            <label for="inputName" class="col-sm-2 col-form-label">SEO title</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(x => x.SeoTitle, new { @class = "form-control", @placeholder = "Enter seo title" })
                                                @Html.ValidationMessageFor(x => x.SeoTitle, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail" class="col-sm-2 col-form-label">SEO keywords</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(x => x.SeoKeywords, new { @class = "form-control", @placeholder = "Enter seo keywords" })
                                                @Html.ValidationMessageFor(x => x.SeoKeywords, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputName2" class="col-sm-2 col-form-label">SEO Description</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(x => x.SeoDescription, new { @class = "form-control", @placeholder = "Enter seo description" })
                                                @Html.ValidationMessageFor(x => x.SeoDescription, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                        <div class="form-group">
                            <a href="/admin/product" class="btn btn-danger">Back</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/autonumeric@4.6.0/dist/autoNumeric.min.js"></script>
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
            const price = new AutoNumeric('#Price', {
                decimalPlaces: 2,
                digitGroupSeparator: '.',
                decimalCharacter: ',',

                unformatOnSubmit: true
            });

            const priceSale = new AutoNumeric('#PriceSale', {
                decimalPlaces: 2,
                digitGroupSeparator: '.',
                decimalCharacter: ',',
                unformatOnSubmit: true
            });
            $('body').on('click', '.btnDeleteImage', function (e) {
                e.preventDefault();
                var conf = confirm('Do you want to delete this image?');
                if (conf === true) {
                    var _id = $(this).data('id');
                    $('#trow_' + _id).fadeTo('fast', 0.5, function () {
                        $(this).slideUp('fast', function () {
                            $(this).remove();
                            updateRowNumbers();
                        });
                    });
                    var current = parseInt($('#tCurrentId').val()) - 1;
                    $('#tCurrentId').val(current);
                }
            });
        });

        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                addImageProduct(fileUrl);
            };
            finder.popup();
        }

        function addImageProduct(url) {
            var current = parseInt($('#tCurrentId').val()) + 1;
            $('#tCurrentId').val(current); // Cập nhật lại ID hiện tại
            var str = `
                            <tr id="trow_${current}">
                                <td class="text-center">${current}</td>
                                <td class="text-center">
                                    <img src="${url}" alt="Image" width="70"/>
                                    <input type="hidden" name="Images" value="${url}" />
                                </td>
                                <td class="text-center">
                                    <input type="radio" name="rDefault" value="${current}" ${current == 1 ? 'checked' : ''}/>
                                </td>
                                <td class="text-center">
                                    <a href="#" data-id="${current}" class="btn btn-sm btn-danger btnDeleteImage">Delete</a>
                                </td>
                            </tr>`;
            $('#tbHtml').append(str);
        }

        function updateRowNumbers() {
            $('#tbHtml tr').each(function (index) {
                $(this).find('td:first').text(index + 1); // cập nhật cột đầu tiên
            });
        }      
    </script>
}
