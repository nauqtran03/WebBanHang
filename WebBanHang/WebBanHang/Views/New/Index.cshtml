@model IPagedList<WebBanHang.Models.EF.New>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 20px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }

    .img-box {
        padding: 10px 0;
    }

    .col-md-9 {
        margin-top: 8px;
    }
    .pagination-container {
        text-align: right;
        margin-top: 20px;
    }

    .pagination {
        display: inline-block;
        padding-left: 0;
        margin: 0;
    }

        .pagination li {
            display: inline;
            margin: 0 3px;
        }

            .pagination li a,
            .pagination li span {
                color: #333;
                padding: 6px 12px;
                text-decoration: none;
                border: 1px solid #ddd;
                border-radius: 4px;
                transition: background 0.3s, color 0.3s;
            }

            .pagination li.active span {
                background-color: #333;
                color: white;
                border-color: #333;
            }

            .pagination li a:hover {
                background-color: #f0f0f0;
            }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news"> News</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Title"><img src="@item.Image" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a href="/@item.Alias-n@(item.Id)" title="@item.Title">@item.Title</a></h3>
                        <div class="description-box">
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>
        }
<div class="row">
    <div class="col-md-12 pagination-container">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
    }

</div>

